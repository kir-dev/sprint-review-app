generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id
  lastname  String
  firstname String
  email     String    @unique
  role      Role      @default(USER)
  Projekt   Project[]
  Tasks     Tasks[]
}

enum Role {
  ADMIN
  USER
}

model Project {
  id             Int      @id @default(autoincrement())
  name           String
  description    String
  projectManager User     @relation(fields: [userId], references: [id])
  userId         String
  createdAt      DateTime @default(now())

  Tasks Tasks[]
}

model Sprint {
  id        Int      @id @default(autoincrement())
  name      String
  startDate DateTime
  endDate   DateTime
  Tasks     Tasks[]
}

model Tasks {
  id          Int      @id @default(autoincrement())
  description String
  sprintId    Int
  sprint      Sprint   @relation(fields: [sprintId], references: [id])
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  projektId   Int
  projekt     Project  @relation(fields: [projektId], references: [id])
  createdAt   DateTime @default(now())
}
